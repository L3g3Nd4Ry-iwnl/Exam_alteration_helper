<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dean Dashboard</title>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" type="text/css" href="./bootstrap-5.0.0-dist/css/bootstrap.min.css">
    <script type="text/javascript" src="./bootstrap-5.0.0-dist/js/bootstrap.min.js"> </script>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@700&display=swap" rel="stylesheet">  
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100 bodyclass">
    <header class="d-flex flex-row align-items-center text-white">
        <h3 class="p-3 mr-auto">Exam Alteration Helper</h3>
        <form action="/dean/logout" method="POST">
            <button class="btn" id="logoutbutton">Logout</button>
        </form>  
    </header>

    <main class="deandash">
        <div class="quotimg">

            <% if (error) { %>
                <div class=" text-center p-3 error" id="error">
                    <h3><u>Message</u></h3>
                    <h5><%= error %></h5>
                </div>
            <% } %>
        </div>
        <div class="m-5" style="overflow-x: auto;">
            <table>
                <th>S.No</th>
                <th>Full Name</th>
                <th>Email Address</th>
                <th>Phone number</th>
                <th>House number</th>
                <th>Street Name</th>
                <th>Area</th>
                <th>City</th>
                <th>State</th>
                <th>Department</th>
                <% if(userData.length!=0){
                    var i=1;
                    userData.forEach(function(data){
                %>
                <tr>
                    <td><%= i; %></td>
                    <td><%= data.f_name %></td>
                    <td><%= data.f_mail_id %></td>
                    <td><%= data.f_phone_no %></td>
                    <td><%= data.f_house_no %></td>
                    <td><%= data.f_street_name %></td>
                    <td><%= data.f_area %></td>
                    <td><%= data.f_city %></td>
                    <td><%= data.state %></td>
                    <td><%= data.f_department %></td>
                </tr>
                <%  i++; }) %>
                <% } else { %>
                    <td>
                        <td colspan="10">No Data Found</td>
                    </td>
                <% } %>
            </table>
        </div>

    </main>


    <footer class="mt-auto">
        <div class="d-flex flex-row justify-content-around p-3">
            <div>
                <form action="/faq" method="GET">
                    <button class="btn" id="ftr_btn">FAQ's</button>
                </form>
            </div>
            <div>
                <form action="mailto:cb.en.u4cse18163@cb.students.amrita.edu" method="GET">
                    <button class="btn" id="ftr_btn">Mail Us</button>
                </form>
            </div>
            <div>
                <form action="/about" method="GET">
                    <button class="btn" id="ftr_btn">About</button>
                </form>
            </div>
        </div>
    </footer>


</body>

</html>